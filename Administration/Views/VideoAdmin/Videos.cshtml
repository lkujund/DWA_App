@model IEnumerable<Integration.BLModels.BLVideo>

@{
    ViewData["Title"] = "Videos";
}

<h1>Videos</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSeconds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreamingUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreamingUrl)
            </td>
            <td>
                @Html.ActionLink("Edit video", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Video", new {  id=item.Id  }) |
                @Html.ActionLink("Delete video", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
